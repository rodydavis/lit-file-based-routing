{
  "name": "lit-file-based-router",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite serve",
    "start": "npm run dev",
    "prebuild": "tsc && npm run generate",
    "generate": "node lit-file-router --dynamic-imports=true --cache-all --show-loading=true --express",
    "server": "tsc && node ./dist/global/server.js"
  },
  "dependencies": {
    "@lit-labs/ssr": "^2.0.1",
    "express": "^4.17.2",
    "koa": "^2.13.4",
    "koa-node-resolve": "^1.0.0-pre.9",
    "koa-static": "^5.0.0",
    "lit": "^2.0.2",
    "lit-file-router": "file:lit-file-router"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^17.0.8",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
}
